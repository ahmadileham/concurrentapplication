<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="309.0" prefWidth="430.0" spacing="20" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="concurrentapplication.InputPageController">
    <stylesheets>
        <URL value="@inputpage.css" />
    </stylesheets>
    <children>
        <Label alignment="CENTER" text="CPP Infinity" textAlignment="CENTER">
            <font>
                <Font name="Franklin Gothic Heavy" size="25.0" />
            </font>
        </Label>
        <Label text="Bag of Words" />
        <HBox alignment="CENTER" prefHeight="21.0" prefWidth="430.0" spacing="10">
            <children>
              <TextField fx:id="filePathField" cacheShape="false" editable="false" prefHeight="26.0" prefWidth="211.0" promptText="Selected File" scaleShape="false" />
                <Button mnemonicParsing="false" onAction="#browseFile" text="Browse" />
                <Button fx:id="submitFileBtn" mnemonicParsing="false" onAction="#submitFile" text="Submit" />
            </children>
        </HBox>
    </children>
</VBox>
